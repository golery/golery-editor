{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    //"sourceMap": true,

    // allow import json
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // still allow to import .js file
    "allowJs": true,

    // https://www.typescriptlang.org/tsconfig#downlevelIteration
    // specific needs of slate
    "downlevelIteration": true,

    // Emit .d.ts to build/types
    // Later rollup.dts() will bundle (and delete unnucessary files) to dist/index.d.ts
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "build/types",

    // allows to write import React from "react";
    "allowSyntheticDefaultImports": true,
  }
}